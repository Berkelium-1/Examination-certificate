.information .content {
  margin-top: 18rpx;
}
.information .content > .title {
  border-left: 5rpx solid #0d91ff;
  font-size: 28rpx;
  color: #0d91ff;
  padding-left: 16rpx;
  margin-left: 32rpx;
}
.information .content > .item-group {
  margin-top: 15.6rpx;
  padding-top: 17.8rpx;
  padding-left: 30rpx;
  width: 750rpx;
  background-color: #ffffff;
}
.information .content > .item-group > .item {
